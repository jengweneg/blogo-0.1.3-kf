<h2><a href=""><%= link_to post.title, blogo_post_path(post) %>. </a></h2>
<div class="clearfix post-meta">
<p><span>Posted by <%= t('blogo.user.post_by') %> <%= post.user.name %></span> <span><time datetime="<%= post.published_at %>"></span>
<span><%= I18n.localize(post.published_at.to_date, format: :long) %></time></span>
</span><span><% post.tag_names.each do |tag_name| %>
        <%= link_to tag_name, blogo_tag_path(tag_name), class: 'tag pure-button button-secondary' %>
      <% end %>
</span></p>
</div>
